#survey {
  background: linear-gradient(
    45deg,
    #ff9a9e 0%,
    #fad0c4 10%,
    #fbc2eb 20%,
    #a6c1ee 30%,
    #a18cd1 40%,
    #fbc2eb 50%,
    #a6c1ee 60%,
    #a18cd1 70%,
    #fbc2eb 80%,
    #fad0c4 90%,
    #ff9a9e 100%
  );
  background-size: 400% 400%;
  background-attachment: fixed;
  animation: gradient 50s ease infinite;
  padding: 20px 0;
  min-height: 100vh;

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }

    100% {
      background-position: 0% 50%;
    }
  }

  .el-input__inner {
    border-radius: 0;
  }

  .el-select, .el-cascader {
    width: 100%;
  }

  input {
    height: 40px;
    line-height: 40px;
    background: #fff;
    box-shadow: none;
    padding: 0 15px;
    overflow: hidden;
    border-radius: 0;
    white-space: nowrap;
  }

  textarea {
    height: 40px;
    line-height: 20px;
    background: #fff;
    box-shadow: none;
    padding: 9px 15px;
    border-radius: 0;
  }

  .survey-container {
    width: 776px;
    margin: 0 auto;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0px 2px 14px rgba(0, 0, 0, 0.03);
    overflow: hidden;

    h1 {
      font-size: 18px;
      text-align: center;
      padding: 32px 0 16px;
      color: #004392;
      font-weight: 500;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    }

    .submit {
      width: 120px;
      line-height: 40px;
      text-align: center;
      font-size: 16px;
      color: #fff;
      margin: 16px auto 32px;
      background: #004392;
      border-radius: 8px;
      cursor: pointer;
    }

    .item {
      padding: 16px 40px;

      >label {
        font-size: 16px;
        color: #004392;
        font-weight: 600;
        padding-bottom: 10px;
        display: block;

        &.required {
          &:before {
            content: '*';
            color: #f00;
          }
        }
      }

      .w-input {
        .code {
          margin-top: 10px;

          button {
            background: none;
            border: 0;
            box-shadow: none;
            color: #004392;
            font-size: 14px;
          }
        }
      }

      .w-privacy {
        .privacy {
          >span {
            font-weight: 500;
            margin-left: 10px;

            em {
              color: #f00;
            }
          }
        }

        .privacy-icon {
          font-size: 24px;
          color: #f00;
        }
      }
    }
  }
}